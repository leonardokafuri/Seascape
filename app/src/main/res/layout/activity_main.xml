<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAllCaps="false"
    android:background="@drawable/background"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLogin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Seascape Hotel Spa"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:fontFamily="@font/dancing_script" />

    <TextView
        android:id="@+id/titlesecondTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLogin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:text="Book now"
        android:textColor="@color/white"
        app:fontFamily="serif" />

    <RelativeLayout
        android:id="@+id/CheckinRel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="300dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Arrival"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/arrivalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/arrival"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="left"
            android:stateListAnimator="@null"
            android:text="Date"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text=""
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/CheckoutRel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="300dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Departure"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/departureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/departure"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="left"
            android:stateListAnimator="@null"
            android:text="Date"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text=""
            android:textColor="@color/black" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white">

        <Spinner
            android:id="@+id/guest"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:entries="@array/guests" />

        <TextView
            android:id="@+id/gueststxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="0dp"
            android:text="Guests"
            android:textColor="@color/black" />


    </RelativeLayout>
    <Button
        android:id="@+id/signIn"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstTextView"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="5dp"
        android:background="@color/specialblue"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:text="Search Rooms"
        android:stateListAnimator="@null"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/search_icon"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="290dp"/>

    <RelativeLayout
        android:id="@+id/RoomKey"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="480dp"

        android:background="@drawable/relative_layout_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/green"
            android:src="@drawable/blank_key" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:text="Room Key"
            android:textColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="@drawable/relative_layout_backgroundattractions"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="150dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/marker"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:text="Nearby"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="15dp"
            android:text="Attractions"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/signinregister"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="@drawable/relative_layout_backgroundattractions"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="300dp"

        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/usericon"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="29dp"
            android:text="Sign in"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="29dp"
            android:text="Register"
            android:textColor="@color/black"
            />
    </RelativeLayout>


</RelativeLayout>